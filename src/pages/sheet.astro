---
import Layout from "@/layouts/Layout.astro";
import Matrix from "@/components/Matrix.astro";
import { getAllBoardsData, getAllSysData } from "../lib/data";

// Get all board and system data
const boardsData = await getAllBoardsData();
const sysData = await getAllSysData();
---

<Layout title="Development Boards">
  <Matrix
    boardsData={boardsData}
    sysData={sysData}
    metadataPath="/support-matrix/assets/metadata.yml"
  />
</Layout>
